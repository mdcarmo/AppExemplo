<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
	<style>
		body {
			padding-top: 80px;
		}
	</style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gerenciador Pessoal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Alterar Senha", "AlterPassword", "User")</li>
                    <li>@Html.ActionLink("Gerenciar Contatos", "Index", "Contact")</li>
                </ul>
				<p class="navbar-text pull-right">

					@if (User.Identity.IsAuthenticated)
					{
						@:Olá @User.Identity.Name
						@: -
						@Html.ActionLink("LogOut", "LogOut", "Authentication")
					}
					else
					{
						@:Olá visitante
						@Html.ActionLink("Entre", "Login", "Authentication")
						@:ou
						@Html.ActionLink("Cadastre-se", "Create", "User")
					}
				</p>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Gerenciador pessoal - Aplicação de exemplo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
